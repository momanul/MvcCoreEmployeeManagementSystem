@model AdministratorViewModel
@{ 
    ViewBag.Title = "Create Role";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post">
                <div class="form-group">
                    <label asp-for="RoleName" class="col-md-12 col-form-label"></label>
                    <div class="col-md-12">
                        <input asp-for="RoleName" class="form-control" placeholder="role name" />
                        <span asp-validation-for="RoleName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <button class="btn btn-primary" style="width: auto">Create Role</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
