@model List<UpdateUserInRoleViewModel>
@{ 
    ViewBag.Title = "Update User in Role";
    var roleID = ViewBag.RoleId;
}

    <div class="container">
        <form method="post">
            <div class="card">
                <div class="card-header">
                    <h3>User in this role</h3>
                </div>
                <div class="card-body">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <input asp-for="@Model[i].UserId" hidden />
                        <input asp-for="@Model[i].UserName" hidden />
                        <div class="form-check">
                            <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                            <label asp-for="@Model[i].IsSelected" class="form-check-label">@Model[i].UserName</label>
                        </div>
                    }
                </div>
                <div class="card-footer">
                    <button type="submit" asp-route-roleID="@roleID" class="btn btn-primary" style="width:auto">update</button>
                    <a asp-action="EditRole" asp-route-id="@roleID" asp-controller="Administrator" class="btn btn-primary" style="width:auto">Cancel</a>
                </div>
                </div>
        </form>
    </div>