@model LoginViewModel
@{ 
    ViewBag.Title = "User Login";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <span asp-validation-for="IsVlidUser" class="text-danger"></span>
            <form method="post">
                <div class="form-group">
                    <div><label asp-for="UserName" class="col-form-label"></label></div>
                    <div>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div><label asp-for="Password" class="col-form-label"></label></div>
                    <div>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-check">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" for="RememberMe" class="form-check-label"></label>
                    </div>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary" type="submit">Sign In</button>
                </div>
            </form>
        </div>
    </div>
</div>
